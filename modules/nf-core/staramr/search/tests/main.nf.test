nextflow_process {

    name "Test Process STARAMR_SEARCH"
    script "../main.nf"
    process "STARAMR_SEARCH"

    tag "modules"
    tag "modules_nfcore"
    tag "staramr"
    tag "staramr/search"

    test("staramr_search - haemophilus_influenzae - genome_fna_gz") {
        when {
            process {
                """                
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.test_data['haemophilus_influenzae']['genome']['genome_fna_gz'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                // md5 sum for the output excel file changes on each run so I can only check to make sure the file is named properly
                { assert snapshot(file(process.out.results_xlsx.get(0).get(1)).name).match("haemophilus_influenzae_results.xlsx") },
                { assert snapshot(path(process.out.summary_tsv.get(0).get(1))).match() }
            )
        }
    }
}

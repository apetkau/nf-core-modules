nextflow_process {

    name "Test Process STARAMR_SEARCH"
    script "../main.nf"
    process "STARAMR_SEARCH"

    tag "modules"
    tag "modules_nfcore"
    tag "staramr"
    tag "staramr/search"

    test("staramr_search - haemophilus_influenzae - genome_fna_gz") {
        when {
            process {
                """                
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.test_data['haemophilus_influenzae']['genome']['genome_fna_gz'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },

                // md5 for these outputs change on each run (they contain dates) and so I can only compare filename
                { assert snapshot(file(process.out.results_xlsx.get(0).get(1)).name).match("test_results.xlsx") },
                { assert snapshot(file(process.out.settings_txt.get(0).get(1)).name).match("test_settings.txt") },

                { assert snapshot(path(process.out.summary_tsv.get(0).get(1))).match("test_summary.tsv") },
                { assert snapshot(path(process.out.detailed_summary_tsv.get(0).get(1))).match("test_detailed_summary.tsv") },
                { assert snapshot(path(process.out.resfinder_tsv.get(0).get(1))).match("test_resfinder.tsv") },
                { assert snapshot(path(process.out.plasmidfinder_tsv.get(0).get(1))).match("test_plasmidfinder.tsv") },
                { assert snapshot(path(process.out.mlst_tsv.get(0).get(1))).match("test_mlst.tsv") }
            )
        }
    }
}
